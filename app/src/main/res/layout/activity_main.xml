<?xml version="1.0" encoding="utf-8"?>
<TabHost
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@android:id/tabhost">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TabWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@android:id/tabs"/>
            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@android:id/tabs"
                    android:id="@android:id/tabcontent">

                <!-- 第一个tab布局 -->
                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tab1">
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="5dp"
                                android:text="设备信息"
                                android:textStyle="bold"/>
                        <LinearLayout
                                android:id="@+id/android_ver_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Android版本号: "
                                    android:layout_alignParentLeft="true"/>
                            <TextView
                                    android:id="@+id/android_version"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/sys_ver_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="定制系统版本号: "
                                    android:layout_alignParentLeft="true"/>
                            <TextView
                                    android:id="@+id/sys_version"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"/>
                            <TextView
                                    android:id="@+id/kernel_version"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="5dp"
                                android:text="被测应用信息"
                                android:textStyle="bold"/>
                        <LinearLayout
                                android:id="@+id/app_name_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="应用包名: "
                                    android:layout_alignParentLeft="true"/>
                            <TextView
                                    android:id="@+id/pck_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/app_ver_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="应用版本: "/>
                            <TextView
                                    android:id="@+id/pck_version"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="20dp"
                                android:text="测试配置"
                                android:textStyle="bold"/>

                        <LinearLayout
                                android:id="@+id/config_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="执行时长: "/>
                            <EditText
                                    android:id="@+id/hour_setting"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="18dp"
                                    android:textAlignment="center"
                                    android:hint="0"
                                    android:digits="0123456789"
                                    android:maxLength="2"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="小时"
                                    android:layout_marginLeft="2dp"/>
                            <EditText
                                    android:id="@+id/minute_setting"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="18dp"
                                    android:textAlignment="center"
                                    android:hint="10"
                                    android:digits="0123456789"
                                    android:maxLength="2"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="分钟"
                                    android:layout_marginLeft="2dp"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="执行次数: "
                                    android:layout_marginLeft="30dp"/>
                            <EditText
                                    android:id="@+id/loop_setting"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="18dp"
                                    android:textAlignment="center"
                                    android:hint="3"
                                    android:digits="0123456789"
                                    android:maxLength="3"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="是否检查电量"
                                    android:layout_marginLeft="30dp"/>
                            <Switch
                                    android:id="@+id/battery_check"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@android:color/primary_text_light"
                                    android:checked="true"/>
                        </LinearLayout>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="5dp"
                                android:text="场景配置"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:text="请设置本次测试场景需要使用的参数"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <LinearLayout
                                    android:id="@+id/frequency_setting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="最大频率范围"
                                        android:textStyle="bold"/>
                                <Switch
                                        android:id="@+id/frequency_switch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@android:color/primary_text_light"
                                        android:checked="false"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/spectrogram_setting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="开启时频图"
                                        android:textStyle="bold"/>
                                <Switch
                                        android:id="@+id/spectrogram_switch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@android:color/primary_text_light"
                                        android:checked="false"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/discharge_setting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="开启局放图谱"
                                        android:textStyle="bold"/>
                                <Switch
                                        android:id="@+id/discharge_switch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@android:color/primary_text_light"
                                        android:checked="false"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/record_setting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="开启录像"
                                        android:textStyle="bold"/>
                                <Switch
                                        android:id="@+id/record_switch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@android:color/primary_text_light"
                                        android:checked="false"/>
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                                android:id="@+id/launch_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开始执行"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="40dp"/>

                        <Button
                                android:id="@+id/test_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="调试"
                                android:visibility="invisible"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="40dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="版本信息："/>
                            <TextView
                                    android:id="@+id/version"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <!-- 第二个tab布局 -->
                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tab2">
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="20dp"
                                android:text="ActivityManager方法"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/start_method1_desc"
                                android:textColor="@android:color/darker_gray"/>
                        <Button
                                android:id="@+id/btn_method1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开始执行"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/am_result"
                                android:text=""/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="20dp"
                                android:text="TotalTime方法"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/start_method2_desc"
                                android:textColor="@android:color/darker_gray"/>
                        <Button
                                android:id="@+id/btn_method2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开始执行"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/tt_result"
                                android:text=""/>
                    </LinearLayout>
                </ScrollView>

                <!-- 第三个tab布局 -->
                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tab3">
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="20dp"
                            android:text="执行说明："
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/stable_test"
                            android:textColor="@android:color/darker_gray"/>
                    <Button
                            android:id="@+id/stable_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开始执行"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:id="@+id/message"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="20dp"
                            android:text=" 执行完成 "
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_green_light"/>
                </LinearLayout>
                </ScrollView>

            </FrameLayout>
        </LinearLayout>
</TabHost>

